<div class="row">
	<div class="col-md-6">
		<label for="labelLocation" class="control-label">Label Location</label>
		<div class="form-group padRight30">
			<select id="labelLocation" class="form-control">
				<option value="inside" {{#compare config.labels.location "inside"}}selected="selected"{{/compare}}>Inside</option>
				<option value="outside" {{#compare config.labels.location "outside"}}selected="selected"{{/compare}}>Outside</option>
			</select>
		</div>
	</div>
	<div class="col-md-6">
		<label for="labelFormat" class="control-label">Label Format</label>
		<div class="form-group padRight30">
			<select id="labelFormatExample" class="form-control">
				<option value="">Examples</option>
				<option value="{L}">Label only</option>
				<option value="{L} {%}">Label plus percentage</option>
				<option value="{L} {V}">Label plus segment value</option>
			</select>
			<input type="text" id="labelFormat" value="{{config.labels.format}}" />
		</div>
	</div>
</div>

<div class="row col-lg-12 form-group">
	<input type="checkbox" id="enableTooltips" {{#compare config.labels.enableTooltips true}}checked="checked"{{/compare}} />
	<label for="enableTooltips" class="control-label">Enable tooltips</label>
</div>
