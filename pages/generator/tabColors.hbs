<div class="row col-lg-12">
	<h4>Colors</h4>
</div>

<div class="row col-lg-12">
	<label for="titleColor" class="control-label">Background Color</label>
</div>

<div class="row">
	<div class="col-md-5">
		<input type="radio" name="backgroundColor" value="transparent" {{#compare config.backgroundColor null operator="=="}}checked="checked"{{/compare}} />
		<label for="backgroundColor" style="margin-left:5px">Transparent</label>
	</div>
	<div class="col-md-7">
		<div class="form-group">
			<input type="radio" name="backgroundColor" value="color" {{#compare config.backgroundColor null operator="!="}}checked="checked"{{/compare}} />
			<div id="backgroundColorGroup" class="colorGroup input-group">
				<input type="text" id="backgroundColor" value="{{config.backgroundColor}}" class="form-control" />
				<span class="input-group-addon"><i></i></span>
			</div>
		</div>
	</div>
</div>

<div class="row col-lg-12">
	<label class="control-label">Segment Colors</label>
</div>


<ul id="segmentColors">
	{{#each config.styles.colors}}
	<li>
		<div>
			<span class="handle"></span>
			<span class="color" style="background-color:{{this}}"></span>
		</div>
	</li>
	{{/each}}
</ul>

<div style="float: right; border: 1px dashed #cccccc; padding: 20px 30px;">
	Drag here to<br />
	delete color
</div>

<ul class="pager">
	<li class="previous"><a href="#">Add color &raquo;</a></li>
</ul>
