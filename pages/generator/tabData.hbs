<table id="data-table" class="table table-striped table-bordered table-hover">
	<thead>
	<tr>
		<th style="width:30%">Label</th>
		<th style="width:20%">Value</th>
		<th style="width:50%">Tooltip</th>
		<th></th>
	</tr>
	</thead>
	<tbody>
	{{#each config.data}}
		<tr>
			<td><input type="text" class="dataLabel" value="{{label}}" /></td>
			<td><input type="text" class="dataValue" value="{{value}}" /></td>
			<td><input type="text" class="dataTooltip" value="{{tooltip}}" /></td>
			<td><span class="removeRow"></span></td>
		</tr>
	{{/each}}
	</tbody>
</table>

<ul class="pager">
	<li class="previous"><a href="#">Add row &raquo;</a></li>
</ul>
