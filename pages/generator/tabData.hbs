<div class="row col-lg-12">
	<h4>Data Settings</h4>
</div>

<div class="row">
    <div class="col-md-3">
        <label>Order data by</label>
    </div>
    <div class="col-md-9 form-group">
        <select id="dataSortOrder" class="form-control changeUpdateNoAnimation">
            <option value="none" {{#compare config.misc.dataSortOrder "none"}}selected="selected"{{/compare}}>Item listing</option>
            <option value="random" {{#compare config.misc.dataSortOrder "random"}}selected="selected"{{/compare}}>Random</option>
            <option value="value-asc" {{#compare config.misc.dataSortOrder "value-asc"}}selected="selected"{{/compare}}>Value - Ascending</option>
            <option value="value-desc" {{#compare config.misc.dataSortOrder "value-desc"}}selected="selected"{{/compare}}>Value - Descending</option>
            <option value="label-asc" {{#compare config.misc.dataSortOrder "label-asc"}}selected="selected"{{/compare}}>Label - A-Z</option>
            <option value="label-desc" {{#compare config.misc.dataSortOrder "label-desc"}}selected="selected"{{/compare}}>Label - Z-A</option>
        </select>
    </div>
</div>

<div class="row col-md-12" style="padding-top: 10px">
    <h4>Data</h4>
</div>

<ul id="sortableDataList">
{{#each config.data}}
	<li>
		<span class="dataHandle"></span>
		<span><input type="text" class="dataLabel" value="{{label}}" /></span>
		<span><input type="text" class="dataValue" value="{{label}}" /></span>
		<span class="removeRow"></span>
	</li>
{{/each}}
</ul>

<table id="data-table" class="table table-striped table-bordered table-hover">
	<thead>
	<tr>
		<th style="width:30%">Label</th>
		<th style="width:20%">Value</th>
		<th></th>
	</tr>
	</thead>
	<tbody>
	{{#each config.data}}
		<tr>
			<td><input type="text" class="dataLabel" value="{{label}}" /></td>
			<td><input type="text" class="dataValue" value="{{value}}" /></td>
			<td><span class="removeRow"></span></td>
		</tr>
	{{/each}}
	</tbody>
</table>

<ul class="pager">
	<li class="previous"><a href="#">Add row &raquo;</a></li>
</ul>
